/* 详情销售 */
.btn{
  width: 100%;
  height: 70rpx;
  border-bottom: 1rpx solid #eee;
  position: fixed;
  z-index: 10;
  background: #fff;
}
.btn .btn_item{
  width: 180rpx;
  height: 52rpx;
  border-radius:30px;
  background: #5c1b97;
  line-height: 50rpx;
  color: #fff;
  font-size: 25rpx;
  float: right;
  margin-right: 40rpx;
}
.btn .item_list{
  width: 160rpx;
  height: 200rpx;
  background:#fff;
  border-radius: 15rpx;
  border:1rpx solid #5c1b97;
  position: absolute;
  top:53rpx;
  left: 545rpx;
}
.btn .item_list view{
  height: 66rpx;
  border-bottom:1rpx solid #5c1b97;
  text-align: center;
  line-height: 63rpx;
  font-size: 25rpx;
  color: #5c1b97;
}
