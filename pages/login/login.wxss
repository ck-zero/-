/* pages/login/login.wxss */
.glop{
 padding: 150px 50px 0px 50px;
 background: rgb(72, 114, 223);
 height:0.1rem;
 border-bottom-left-radius: 50%;
 border-bottom-right-radius: 50%;
 margin-bottom: 50px;
}
.glop .flex{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 20px;
}
.glop .flex:nth-child(1){
  margin-top:30px;
}
.glop .flex .put{
  border:1px solid rgb(196, 192, 192);
  border-radius:30px;
  width:100%;
  height: 47px; 
  padding: 0px 20px 0px 15px;
  font-size: 15px;
  line-height: 47px;
  transition:.2s;
}
.glop .flex .but{
  margin-left: 5px;
  margin-right: 5px;
  width:200px;
  color:#000;
  height: 45px;
  line-height:45px;
  border:1px solid rgb(196, 192, 192);
  border-radius: 10px;
  font-size: 13px;
}
