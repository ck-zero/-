
<!-- top -->
<text class='title' style='top:{{statusBarHeight+3}}px'>注册</text>

<!-- 表单 -->
  <view class="glop">
   <image src='{{img}}'></image>
    <view class="bot">
      <view class="flex">
      <image class="img_gs" src='{{img_gs}}'></image>
        <input class="put" placeholder="请输入公司名称" maxlength="20" minlength="2" value="{{login}}" data-statu="open"  bindinput='userLogoInput' auto-focus></input>
   
<!-- 下拉框  -->
        <view class="scrollview" wx:if="{{showInputStatus}}">
        <view  wx:for="{{bindSource}}" wx:key="item">
        <view id="{{item}}"  class="itemview" bindtap="itemtap" data-statu="close" wx:if="{{showInputStatus}}">
        {{item}} 
        </view>
        </view>
        </view>
      </view>
      <view class="flex">
      <image src='{{img_xm}}'></image>
        <input class="put" placeholder="请输入您的姓名" type="text" maxlength="12" value='' bindinput='userNameInput'></input>
      </view>
      <view class="flex">
      <image src='{{img_dh}}'></image>
        <input class="put" placeholder="请输入您的电话" type="text" maxlength="11" value='' bindinput='mobileInput'></input>
      </view>
      <view class="flex">
      <image src='{{img_yzm}}'></image>
        <input class="put" placeholder="验证码" maxlength="10"  type="text" value="" bindinput='getCodeValue'></input>
        <button class="but" bindtap="getVerificationCode" disabled='{{disabled}}'>{{codename}}</button>
      </view>
      <view class="flex">
        <button class='btn' bindtap="buton" type="warn">注册</button>
      </view>
    </view>
  </view>
