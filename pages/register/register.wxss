}
.src{
  width: 200rpx;
  height: 200rpx;

}
.img{
width: 30rpx;
height:26rpx;

}
.img_src{
  width: 100%;
  height: 100%;
  position: absolute;
  top:0;
  left: 0;
}
.img_x{
  width: 60rpx;
  height:60rpx;
  margin-top:100rpx;
}
.text{
  color:#fff;
  font-size: 35rpx;
  margin-top:30rpx;
  
}
.golp .butn{
  background: linear-gradient(to right, #6d4ba6 , #7645c8,#6d4ba6);
  border-radius: 50rpx;
  color: #fff;
  font-size: 30rpx;
  margin-top: 150rpx;
  box-shadow: 0rpx 10rpx 30rpx 0rpx rgba(0, 0, 0, 0.2) ;
  height: 100rpx;
  line-height: 100rpx;
}
.button-hover{
 opacity: 0.9;
 transform: scale(0.99, 0.99);
}

.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 9000;
  opacity: 0.7;
}
 
.dialog-box {
  position: fixed;
  top: 55%;
  left: 0;
  z-index: 9999;
  margin: -370rpx 85rpx;
  /* background-color: #fff; */
  display: flex;
  flex-direction: column;
  align-items: center;
}
.dialog-box view:first-child{
  color: rgb(255, 208, 0);
  padding-bottom: 20rpx;
  font-size: 50rpx;
}
.dialog-box view:nth-child(2n){
  font-size: 28rpx;
  color: rgb(173, 169, 169);
  padding-bottom:20rpx; 
}
.btn{
  margin-top: 40rpx;
  color: rgb(255, 208, 0);
  border-radius: 50rpx;
  background: rgba(253, 251, 251, 0.1);
  border:1rpx solid rgb(255, 208, 0);
  width: 220rpx;
  height: 74rpx;
  font-size: 29rpx;
}
:button::after { 
border: none; 
}

