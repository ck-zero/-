.blue .img{
  width: 100%;
  height: 600rpx;
  display: flex;
  position: relative;
  z-index: -1
}
.blue .img_url{
  width: 200rpx;
  height:200rpx;
  position: absolute;
  left: 40%;
  top: 100rpx;
  margin:0 auto;
}
.blue .font{
  position: absolute;
  top:340rpx;
  left:39.999%;
  font-size: 50rpx;
  font-weight: bold;
  color: #fff;
}
.font_text{
  padding-top: 30rpx;
  font-weight: bold;
  text-align: center;
}
.font_size{
  padding-top:30rpx;
  font-size: 27rpx;
  text-align: center;
}
.font_right{
  margin-top:100rpx;
  border:1px solid rgb(196, 192, 192);
  border-radius:30px;
  width:45%;
  height: 47px; 
  padding: 0px 20px 0px 15px;
  font-size: 15px;
  line-height: 47px;
  transition:.2s;
}